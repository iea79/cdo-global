extends layout/layout.pug

block content
    .page
        .container_center
            +breadcrumb(['Главная', 'Новости'])

            h1.page__title Новости

            .news
                .newsGrid
                    each item in [1, 2, 3, 2, 3, 1, 3, 1, 2, 1, 2, 3, 2, 3, 1 ]
                        .newsGrid__item
                            a(href="#").news__link
                                .news__img
                                    img(src="./img/event-"+item+".jpg", alt="alt")
                                .news__date
                                    span 25.02.2022
                                h3.news__title ИС управление приемной компанией и настройке ЛК

            ul.pagination
                li.prev
                    a(href="#").disable 
                li
                    a(href="#").current 1
                li
                    a(href="#") 2
                li
                    a(href="#") 3
                li
                    a(href="#") 4
                li
                    span ...
                li
                    a(href="#") 15
                li.next
                    a(href="#")
